<%- include('./partials/header.ejs') %>

<%- include('./partials/navbar.ejs') %> 

<div class="blogs content">
    <h2>ALL BLOGS</h2>

    <% if(blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a class="single" href="/blogs/<%= blog.id %>">
                <h3 class="title"> <%= blog.title %></h3>
                <p class="snippet"> <%= blog.snippet %> </p>
            </a>
        <% }); %>
    <% } else { %>
        <h5>No Blogs to Show</h5>
    <% } %>

</div>

